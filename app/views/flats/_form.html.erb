<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night,input_html: { min: 0 } %>
    <%= f.input :number_of_guests, input_html: { min: 0 } %>

  </div>

  <div class="form-actions d-flex justify-content-between">
    <%= link_to "Cancel", flats_path, class: "btn btn-danger w-50 me-3" %>
    <%= f.button :submit,class: "btn btn-primary w-50"%>
  </div>
<% end %>
